<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.voicerecorder.ActivityGrabar" >

    <Button
        android:id="@+id/bReproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bDetener"
        android:layout_alignRight="@+id/bDetener"
        android:layout_below="@+id/bDetener"
        android:layout_marginTop="24dp"
        android:onClick="reproducir"
        android:text="Reproducir" />

    <Button
        android:id="@+id/bGrabar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:onClick="grabar"
        android:text="Grabar" />

    <Button
        android:id="@+id/bDetener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bGrabar"
        android:layout_alignRight="@+id/bGrabar"
        android:layout_below="@+id/bGrabar"
        android:layout_marginTop="22dp"
        android:onClick="detenerGrabacion"
        android:text="Detener grabacion" />

    <Button
        android:id="@+id/bDetenerReproduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bReproducir"
        android:layout_alignRight="@+id/bReproducir"
        android:layout_below="@+id/bReproducir"
        android:layout_marginTop="26dp"
        android:onClick="detener"
        android:text="Detener reproduccion" />
     
</RelativeLayout>